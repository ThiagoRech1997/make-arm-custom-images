# ---- Imagem base Alpine para RPi armv7 ----
ALPINE_VERSION=3.20.3
ALPINE_BASE_URL=https://dl-cdn.alpinelinux.org/alpine
ALPINE_FLAVOR=alpine-rpi
ALPINE_ARCH=armv7
ALPINE_TARBALL=${ALPINE_FLAVOR}-${ALPINE_VERSION}-${ALPINE_ARCH}.tar.gz

# ---- Caminhos ----
WORK_DIR=$(pwd)
OUTPUT_DIR=${WORK_DIR}/output
TMP_DIR=${WORK_DIR}/tmp
IMG_NAME=alpine-rpi3-custom.img
IMG_SIZE_GB=2

# ---- Rede/Wi-Fi ----
WIFI_SSID=MinhaRede
WIFI_PSK=SenhaSecreta
WIFI_COUNTRY=BR

# ---- Hostname e SSH ----
HOSTNAME=rpi3-alpine
ENABLE_SSH=true

# ---- Pacotes ----
INSTALL_DOCKER=true
INSTALL_DOCKER_COMPOSE=true

# ---- QEMU (emulação aproximada) ----
QEMU_MACHINE=raspi2
QEMU_CPU=cortex-a7
QEMU_RAM=1024

# ---- Mirrors Alpine ----
ALPINE_MIRROR=${ALPINE_BASE_URL} 