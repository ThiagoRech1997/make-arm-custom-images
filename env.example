# =============================================================================
# CONFIGURAÇÕES DO PROJETO - Make ARM Custom Images
# =============================================================================
# Copie este arquivo para .env e ajuste as configurações conforme necessário

# =============================================================================
# CONFIGURAÇÕES DA IMAGEM BASE
# =============================================================================

# Versão do Alpine Linux
ALPINE_VERSION="3.18"
ALPINE_ARCH="armv7"
ALPINE_VARIANT="alpine-minirootfs"

# URL base para download do Alpine
ALPINE_BASE_URL="https://dl-cdn.alpinelinux.org/alpine/v${ALPINE_VERSION}/releases/${ALPINE_ARCH}"

# Tamanho da imagem final (em MB)
IMAGE_SIZE_MB="2048"

# =============================================================================
# CONFIGURAÇÕES DE REDE
# =============================================================================

# Configurações Wi-Fi
WIFI_SSID=""
WIFI_PASSWORD=""
WIFI_COUNTRY="BR"

# Configurações de rede cabeada (opcional)
ETH_DHCP="true"
ETH_IP=""
ETH_NETMASK=""
ETH_GATEWAY=""

# =============================================================================
# CONFIGURAÇÕES DO SISTEMA
# =============================================================================

# Hostname do dispositivo
HOSTNAME="alpine-pi3b"

# Timezone
TIMEZONE="America/Sao_Paulo"

# Locale
LOCALE="pt_BR.UTF-8"

# Senha do root (deixe vazio para sem senha)
ROOT_PASSWORD=""

# =============================================================================
# PACOTES ADICIONAIS
# =============================================================================

# Pacotes essenciais (sempre instalados)
ESSENTIAL_PACKAGES="ca-certificates curl wget bash"

# Pacotes opcionais (instalados se especificados)
OPTIONAL_PACKAGES="docker docker-compose git vim htop"

# =============================================================================
# CONFIGURAÇÕES QEMU
# =============================================================================

# Parâmetros QEMU para teste
QEMU_MACHINE="raspi2"
QEMU_CPU="cortex-a7"
QEMU_MEMORY="512M"
QEMU_KERNEL=""
QEMU_DTB=""

# Porta para SSH (se habilitado)
QEMU_SSH_PORT="2222"

# =============================================================================
# CONFIGURAÇÕES DE BUILD
# =============================================================================

# Diretório de trabalho temporário
WORK_DIR="./work"

# Diretório de saída
OUTPUT_DIR="./output"

# Nome do arquivo de saída
OUTPUT_FILENAME="alpine-pi3b-custom.img"

# Limpar arquivos temporários após build
CLEANUP_AFTER_BUILD="true"

# =============================================================================
# CONFIGURAÇÕES DE LOG
# =============================================================================

# Nível de log (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL="INFO"

# Arquivo de log
LOG_FILE="./build.log"

# =============================================================================
# CONFIGURAÇÕES AVANÇADAS
# =============================================================================

# Usar cache de pacotes (acelera builds subsequentes)
USE_PACKAGE_CACHE="true"

# Verificar checksums dos downloads
VERIFY_CHECKSUMS="true"

# Comprimir imagem final
COMPRESS_OUTPUT="false"

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =============================================================================

# Habilitar SSH por padrão
ENABLE_SSH="true"

# Permitir login root via SSH
ALLOW_ROOT_SSH="false"

# Chave SSH pública para acesso (opcional)
SSH_PUBLIC_KEY=""

# =============================================================================
# CONFIGURAÇÕES DE SERVIÇOS
# =============================================================================

# Serviços para iniciar no boot
BOOT_SERVICES="sshd networking"

# Serviços opcionais
OPTIONAL_SERVICES="docker" 